@model MovieWeb.Data.ApiClasses.MovieJsonMap

@{
    ViewData["Title"] = "Movie details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.title
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.backdrop_path" width="100%" alt="@Model.title">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.overview</p>
                        <p class="card-text">
                            <b>Cinema: </b>
                            <a asp-controller="Cinemas" asp-action="Details" asp-route-id="@Model.id">
                                Sample Cinema
                            </a>
                        </p>
                        <p class="card-text">
                            <b>Producer: </b>
                            <a asp-controller="Producers" asp-action="Details" asp-route-id="@Model.id">
                                Sample Cinema
                            </a>
                        </p>
                        <p class="card-text"><b>Category: </b>@Model.genres.ElementAt(0).name</p>
                        <p class="card-text"><b>Release Date: </b>@Model.release_date</p>
                        <p class="card-text"><b>Ratings: </b>@Model.vote_count</p>
                        <p class="card-text ">
                            <b>Status: </b>
                            @Model.status
                        </p>
                        <p class="card-text">
                            <b>Actors: </b>
                            <hr />
                            <div class="row">


                                @*@foreach (var prov in Model.providers.results.US.flatrate)
                                {
